<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" >

	<TextView
		android:id="@+id/text_result"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/game_end_result"
	    android:textSize="20sp" />

	<TextView
		android:id="@+id/text_option"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/game_end_option"
	    android:textSize="20sp" />
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
	    
	    <Button
	        android:id="@+id/button_once_more"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/once_more" />
	
	    <Button
	        android:id="@+id/button_back_menu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/back_menu" />
	        
    </LinearLayout>

</LinearLayout>
